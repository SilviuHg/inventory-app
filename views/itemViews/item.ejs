<!DOCTYPE html>
<html>
  <head>
    <title>Inventory</title>
  </head>
  <body>
    <div id="root">
      <%- include("../partials/navbar.ejs") %> <% if (locals.item) { %>
      <div class="wrapper">
        <h2>Item: <%= item[0].name %></h2>
        <p>Developer: <%= item[0].developer %></p>
        <p>Year released: <%= item[0].year_released %></p>
        <p>Categories:</p>
        <ul>
          <% item.forEach((item) => { %>
          <li>
            <a href="/category/<%= item.genre_id %>"><%= item.genre_name %></a>
          </li>
          <% }); %>
        </ul>
        <% } %>
        <form
          class="item-buttons"
          action="/item/<%= item[0].id %>"
          method="POST"
        >
          <button
            type="submit"
            onclick="return confirm('Are you sure you want to delete this item?');"
          >
            Delete
          </button>
          <a href="/item/<%= item[0].id %>/update">Edit item</a>
        </form>
      </div>
    </div>
  </body>
</html>
