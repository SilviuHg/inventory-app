<!DOCTYPE html>
<html>
  <head>
    <title>Inventory</title>
  </head>
  <body>
    <%- include("../partials/navbar.ejs") %> <% if (locals.item) { %>
    <h2>Item: <%= item[0].name %></h2>
    <p>Developer: <%= item[0].developer %></p>
    <p>Year released: <%= item[0].year_released %></p>
    <p>Categories:</p>
    <ul>
      <% item.forEach((item) => { %>
      <li>
        <a href="/category/<%= item.genre_id %>"><%= item.genre_name %></a>
      </li>
      <% }); %>
    </ul>
    <% } %>
    <form action="/item/<%= item[0].id %>" method="POST">
      <button
        type="submit"
        onclick="return confirm('Are you sure you want to delete this user?');"
      >
        Delete
      </button>
    </form>
  </body>
</html>
