<!DOCTYPE html>
<html>
  <head>
    <title>Inventory</title>
  </head>
  <body>
    <%- include("../partials/navbar.ejs") %>
    <h1>Create game item</h1>
    <form method="POST" action="/create-item">
      <div>
        <input required type="text" name="game-name" placeholder="Name" />
      </div>
      <div>
        <input required type="text" name="developer" placeholder="Developer" />
      </div>
      <div>
        <input
          required
          type="text"
          name="year-released"
          placeholder="Year released"
        />
      </div>
      <button type="submit">Add</button>
    </form>
  </body>
</html>
