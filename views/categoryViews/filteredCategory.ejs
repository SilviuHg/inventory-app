<!DOCTYPE html>
<html>
  <head>
    <title>Inventory</title>
  </head>
  <body>
    <%- include("../partials/navbar.ejs") %> <%-
    include("../partials/errors.ejs") %> <% if (locals.genre) { %>
    <h2>Category: <%= genre.genre_name %></h2>
    <% if (locals.games.length > 0) { %>
    <p>Games:</p>
    <ul>
      <% games.forEach((game) => { %>
      <li>
        <a href="/item/<%= game.game_id %>"><%= game.name %></a>
      </li>
      <% }); %>
    </ul>
    <% } else { %>
    <p>No games available for this category.</p>
    <% } %> <% } %>
    <form action="/category/<%= genre.genre_id %>" method="POST">
      <button
        type="submit"
        onclick="return confirm('Are you sure you want to delete this category?');"
      >
        Delete category
      </button>
    </form>
  </body>
</html>
